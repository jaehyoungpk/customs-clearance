# FastAPI 애플리케이션 설정
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# OpenAI API 설정 (필수)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TEMPERATURE=0.1

# PostgreSQL 데이터베이스 설정 (대화기록 저장)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=conversations
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# Redis 설정 (세션 캐시)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ChromaDB 설정 (벡터 저장소 - 기존 model-chatbot와 공유)
CHROMADB_MODE=local
CHROMADB_HOST=localhost
CHROMADB_PORT=8011
CHROMADB_PERSIST_DIRECTORY=data/chroma_db

# JWT 토큰 설정 (presentation-tier/backend와 공유)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS 설정
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://customs-clearance.com
CORS_ALLOW_CREDENTIALS=true

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log

# 성능 튜닝 설정
MAX_CONTEXT_MESSAGES=20
CONTEXT_CACHE_TTL=3600
SESSION_CACHE_TTL=7200
MESSAGE_CACHE_TTL=86400

# 보안 설정
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
API_RATE_LIMIT=100
API_RATE_WINDOW=3600

# 모니터링 설정 (선택적)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# 백업 설정 (선택적)
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# 개발/테스트 설정
TEST_DATABASE_URL=postgresql://test:test@localhost:5433/test_conversations
PYTEST_TIMEOUT=300

# Docker 컨테이너 설정 (docker-compose용)
DOCKER_POSTGRES_PORT=5432
DOCKER_REDIS_PORT=6379
DOCKER_CHROMADB_PORT=8011
DOCKER_FASTAPI_PORT=8000

# Health Check 설정
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Feature Flags (실험적 기능 제어)
ENABLE_CONVERSATION_EXPORT=true
ENABLE_ADVANCED_SEARCH=true
ENABLE_CONVERSATION_ANALYTICS=false
ENABLE_WEBSOCKET=false