# Korean Customs Clearance System - Database Environment Configuration
# Copy this file to .env and adjust values for your environment

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=root_password_change_in_production
MYSQL_DATABASE=customs_clearance_dev_db
MYSQL_USER=customs_user
MYSQL_PASSWORD=customs_password_change_in_production
MYSQL_PORT=3306

# Additional MySQL Users
MYSQL_READONLY_PASSWORD=readonly_password_change_in_production
MYSQL_BACKUP_PASSWORD=backup_password_change_in_production

# PhpMyAdmin Configuration (optional)
PHPMYADMIN_PORT=8081

# Backup Configuration
BACKUP_RETAIN_DAYS=7

# Development Settings
ENVIRONMENT=development
DEBUG_MODE=true

# Time Zone Configuration
TZ=Asia/Seoul

# Security Settings
JWT_SECRET=your_jwt_secret_key_change_in_production
ENCRYPTION_KEY=your_32_character_encryption_key

# External API Configuration
EXTERNAL_API_URL=http://localhost:9000
EXTERNAL_API_TIMEOUT=10000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@customs.gov.kr

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs

# Performance Tuning
DB_CONNECTION_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30000

# Korean Localization
DEFAULT_LOCALE=ko_KR
DEFAULT_TIMEZONE=Asia/Seoul
DEFAULT_CURRENCY=KRW